{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext",
  },
  "include": [
    "src/*.js"
  ],
  "exclude": [
    "coverage",
    "node_modules",
    "test"
  ]
}
